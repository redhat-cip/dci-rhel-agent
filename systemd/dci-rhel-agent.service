[Unit]
Description=DCI Ansible Agent for RHEL

[Service]
Type=oneshot
WorkingDirectory=/usr/share/dci-rhel-agent
EnvironmentFile=/etc/dci-rhel-agent/dcirc.sh
ExecStart=/usr/bin/ansible-playbook -vv /usr/share/dci-rhel-agent/dci-rhel-agent.yml -e @/etc/dci-rhel-agent/settings.yml
SuccessExitStatus=0
User=dci-rhel-agent

[Install]
WantedBy=default.target
