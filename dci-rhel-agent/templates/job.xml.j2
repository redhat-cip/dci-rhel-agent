<job retention_tag="Scratch">
    <whiteboard>This job was scheduled from the dci-rhel-agent using XML template.</whiteboard>
    <recipeSet priority="Normal">
        {% if hostvars.localhost.system_arch == 'ppc64le' %}
                <recipe ks_meta="selinux=--permissive autopart_type=plain harness='restraint beakerlib' {% if ks_meta is defined %}{{ ks_meta }}{% endif %}" whiteboard="" kernel_options="netbootloader=boot/grub2/{{ fqdn }}/powerpc-ieee1275/core.elf {% if kernel_options is defined %}{{ kernel_options }}{% endif %}">
        {% else %}
                <recipe ks_meta="selinux=--permissive autopart_type=plain harness='restraint beakerlib' {% if ks_meta is defined %}{{ ks_meta }}{% endif %}" whiteboard="" kernel_options="{% if kernel_options is defined %}{{ kernel_options }}{% endif %}">
        {% endif %}
            <distroRequires>
                <and>
                    <distro_name op="=" value="{{ distro_name }}"/>
                    <distro_arch op="=" value="{{ hostvars.localhost.system_arch }}"/>
                </and>
            </distroRequires>
            {% if fqdn is defined %}
                    <hostRequires force="{{ fqdn }}" />
            {% else %}
            <hostRequires/>
            {% endif %}
            {% if 'RHEL-7' in topic %}
            <repos>
              <repo name="extraos-local" url="http://{{ local_repo_ip }}/{{ topic }}/extraos/Server/{{ hostvars.localhost.system_arch }}/os"/>
            </repos>
            {% endif %}
            <partitions/>
            <task name="/distribution/check-install" role="STANDALONE">
                <params>
                </params>
            </task>
            <reservesys/>
        </recipe>
    </recipeSet>
</job>
