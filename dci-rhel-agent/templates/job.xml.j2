<job retention_tag="Scratch">
    <whiteboard>This job was scheduled from the dci-rhel-agent using XML template.</whiteboard>
  {% for variant, values  in compose_info.boot_variants.items() %}
    <recipeSet priority="Normal">
        <recipe ks_meta="selinux=--permissive autopart_type=plain skip_taskrepo=1 no_default_harness_repo harness='{{ harness }}' disabled_root_access=True {% if ks_meta is defined %}{{ ks_meta }}{% endif %}" whiteboard="" kernel_options="grub2_postfix='{{ efi_boot_command }}' {% if netbootloader is defined %}{{ netbootloader }} {% endif %}{% if kernel_options is defined %}{{ kernel_options }}{% endif %}">
         <ks_appends>
             <ks_append><![CDATA[
%post
mkdir -p /root/.ssh
cat >>/root/.ssh/authorized_keys <<"__EOF__"
{{ ssh_public_key }}
__EOF__
restorecon -R /root/.ssh
chmod go-w /root /root/.ssh /root/.ssh/authorized_keys
sed -i '/^#PermitRootLogin /s/^#//' /etc/ssh/sshd_config
sed -i 's|PermitRootLogin .*|PermitRootLogin yes|' /etc/ssh/sshd_config
systemctl restart sshd
%end
             ]]></ks_append>
         </ks_appends>

            <distro>
                <tree url="http://{{ local_repo_ip }}/{{ values.os_tree |replace('/data','dci') }}"/>
                <initrd url="{{ values.pxe_images.initrd }}"/>
                <kernel url="{{ values.pxe_images.kernel }}"/>
                {% if use_boot_image |default(false, true) %}
                <image url="{{ values.pxe_images.image }}"/>
                {% endif %}
                <arch value="{{ hostvars.localhost.system_arch }}"/>
                <osversion major="{{ compose_info.osmajor }}" minor="{{ compose_info.osminor }}"/>
                <name value="{{ compose_info.compose_id }}"/>
                <variant value="{{ variant }}"/>
            </distro>
            {% if fqdn is defined %}
                    <hostRequires force="{{ fqdn }}" />
            {% else %}
            <hostRequires/>
            {% endif %}
            <repos>
              {% for name, url in compose_info.repos.items() %}
                <repo name="{{ name }}" url="http://{{ local_repo_ip }}/{{ url | replace('/data','dci') }}"/>
              {% endfor %}
            {% if 'RHEL-7' in topic_name %}
              <repo name="extraos-local" url="http://{{ local_repo_ip }}/dci/{{ topic_name }}/extraos/Server/{{ hostvars.localhost.system_arch }}/os"/>
            {% endif %}
              <repo name="harness" url="http://{{ local_repo_ip }}/dci/harness/{{ compose_info.osmajor }}/"/>
            </repos>
            <partitions/>
            <task name="/distribution/check-install" role="STANDALONE">
                <params>
                </params>
            </task>
            <reservesys/>
        </recipe>
    </recipeSet>
  {% endfor %}
</job>
