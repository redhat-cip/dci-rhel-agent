#! /bin/bash

virt-install \
    --virt-type=kvm \
    --name "{{ item.name }}" \
    --uuid="{{ item.uuid| default(99999999 | random | to_uuid) }}" \
    --memory {{ item.memory }} \
    --vcpus={{ item.vcpu }} \
    --os-variant=rhel8.3 \
    --os-type linux \
    --network=bridge:{{ item.network_interface }},mac="{{ item.mac }}" \
    {% for disk_name, disk_size in item.disks.items() %}
    --disk path={{ images_dir }}/{{ item.name }}_{{ disk_name }}.qcow2,size={{ disk_size }},format=qcow2 \
    {% endfor %}
    --graphics vnc \
    --noautoconsole \
    --wait=-1 \
    {% if item.mode == 'secure' %}
    --boot uefi,network,hd \
    {% elif item.mode == 'efi' %}
    --boot loader=/usr/share/edk2/ovmf/OVMF_CODE.cc.fd,loader.readonly=yes,loader.secure='no',loader.type=pflash,nvram=/usr/share/edk2/ovmf/OVMF_VARS.fd,network,hd \
    {% else %}
    --boot network,hd \
    {% endif %}
    --events on_reboot=restart \
    --autostart \
    --print-xml > {{ temp_dir.path }}/{{item.name}}.xml

virsh define --file {{ temp_dir.path }}/{{item.name}}.xml

virsh detach-device {{ item.name }} {{ temp_dir.path }}/rng_device.xml --config
